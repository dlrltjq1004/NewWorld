<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/friendListItem_ProfileIv"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:src="@drawable/kakao_default_profile_image"
         android:layout_margin="10dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



       <TextView
           android:id="@+id/friendListItem_Name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="이름"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="12dp"
           android:textSize="18dp"
           android:textStyle="bold"/>


        <TextView
            android:id="@+id/friendListItem_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_marginLeft="350dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

         <TextView
             android:id="@+id/friendListItem_date"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="오후 12:52"
             android:layout_marginLeft="15dp"/>


                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                    <!--android:id="@+id/friendListItem_MsgNum"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:src="@drawable/kakao_default_profile_image"-->
                    <!--android:layout_margin="10dp"/>-->

                <TextView
                    android:id="@+id/friendListItem_MsgNum"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="45dp"
                    android:background="#ff4e4e"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
